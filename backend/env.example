# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=rideshare
DB_USER=postgres
DB_PASSWORD=password
DATABASE_URL=postgresql://username:password@localhost:5432/rideshare

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_PREFIX=rideshare:

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Security Configuration
ENCRYPTION_KEY=your-32-character-encryption-key
API_KEY_SECRET=your-api-key-secret
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@rideshare.com

# AWS Configuration (Optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your_s3_bucket_name

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log
ERROR_LOG_FILE=logs/error.log

# Test Configuration
TEST_DB_NAME=ride_share_test_db
TEST_SERVER_URL=http://localhost:3000

# Socket.IO Configuration
SOCKET_CORS_ORIGIN=http://localhost:3000
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000

# Analytics Configuration
ANALYTICS_ENABLED=true
ANALYTICS_DB_NAME=ride_share_analytics_db

# Safety Configuration
SAFETY_ALERT_EMAIL=safety@rideshare.com
EMERGENCY_CONTACT=911

# Session Configuration
SESSION_SECRET=your-session-secret
SESSION_MAX_AGE=86400000

# Password Policy
MIN_PASSWORD_LENGTH=8
REQUIRE_UPPERCASE=true
REQUIRE_LOWERCASE=true
REQUIRE_NUMBERS=true
REQUIRE_SPECIAL_CHARS=true

# Login Security
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_DURATION=900000
REQUIRE_EMAIL_VERIFICATION=true

# Development Settings
ENABLE_MOCK_DATA=true
ENABLE_DEBUG_LOGGING=true
SKIP_EMAIL_VERIFICATION=false

# Third Party API Keys
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key

# Security Configuration
API_KEY=your_api_key_here
CORS_ORIGIN=http://localhost:3000 