{
  "name": "ride-share-backend",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:mock": "node start-dev.js",
    "dev:mock:watch": "nodemon start-dev.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:simple": "node test-simple.js",
    "test:realtime": "node test-runner.js",
    "test:realtime:basic": "node test-server-basic.js",
    "test:realtime:full": "node test-socket-client.js",
    "build": "npm ci --production",
    "migrate": "node scripts/migrate.js",
    "migrate:rollback": "node scripts/migrate.js --rollback",
    "backup": "node scripts/backup.js",
    "backup:restore": "node scripts/backup.js --restore",
    "deploy": "bash scripts/deploy.sh",
    "docker:build": "docker build -f Dockerfile.prod -t ride-share-backend:latest .",
    "docker:run": "docker run -p 3000:3000 --env-file .env ride-share-backend:latest",
    "docker:compose": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:compose:down": "docker-compose -f docker-compose.prod.yml down",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "security:audit": "npm audit --audit-level moderate",
    "security:fix": "npm audit fix",
    "health:check": "curl -f http://localhost:3000/health || exit 1",
    "logs": "tail -f logs/app.log",
    "logs:error": "tail -f logs/error.log",
    "logs:safety": "tail -f logs/safety.log",
    "monitor": "node scripts/monitor.js",
    "clean": "rm -rf node_modules package-lock.json && npm install"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "aws-sdk": "^2.1550.0",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-slow-down": "^2.0.1",
    "express-validator": "^7.0.1",
    "google-auth-library": "^10.1.0",
    "helmet": "^7.1.0",
    "i18n": "^0.15.1",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.7",
    "pg": "^8.11.3",
    "prisma": "^5.0.0",
    "socket.io": "^4.7.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@sentry/node": "^7.100.0",
    "eslint": "^8.57.0",
    "jest": "^30.0.2",
    "nodemon": "^3.0.0",
    "socket.io-client": "^4.7.2",
    "supertest": "^7.1.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "ride-share",
    "backend",
    "api",
    "safety",
    "real-time",
    "express",
    "socket.io"
  ],
  "author": "Ride Share Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/ride-share-app.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/ride-share-app/issues"
  },
  "homepage": "https://github.com/your-org/ride-share-app#readme"
}
